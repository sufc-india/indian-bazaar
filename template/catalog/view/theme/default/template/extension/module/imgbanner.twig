<div class="container">
<div class="topbanner">
<div class="row">
	
<div class="imgbanner col-xs-4 col-md-4 col-sm-4 firstbanner">
			{% for banner in banners %}
				<div class=" banner-effect">
				  {% if banner.link %}
				  	<a href="{{ banner.link }}">
				  		<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
				  	</a>
				  {% else %}
				  	<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />{% endif %}
				</div>
			  {% endfor %}
</div>
